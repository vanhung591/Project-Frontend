{
  "compilerOptions": {
    "target": "esnext",
    "forceConsistentCasingInFileNames": true,
    "allowSyntheticDefaultImports": false,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react",
    "baseUrl": "./src"
  },
  "include": [
    "**/*.jsx",
    "**/*.js",
    "**/*.json",
    "**/*.scss"
  ],
  "exclude": [
    ".next",
    "dist",
    "build",
    "node_modules"
  ]
}